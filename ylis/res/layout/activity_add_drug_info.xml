<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/v_title"
        layout="@layout/title"/>
    <TextView
        android:id="@+id/tv_commit"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/commit"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/pressed_all_main_color_btn"/>
    <ScrollView
        android:layout_below="@id/v_title"
        android:layout_above="@id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_add_drug"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style="@style/CommonViewStyle"
                    android:padding="20dp"
                    android:text="药品"/>
                <TextView
                    style="@style/CommonViewStyle"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/icon_add_exception"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="药品"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>
            <com.healthmanage.ylis.view.ListViewForScrollView
                android:id="@+id/lvfs_drug_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_bg_2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

            </com.healthmanage.ylis.view.ListViewForScrollView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>

            <RelativeLayout
                android:id="@+id/rl_drug_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_drug_position_title"
                    style="@style/CommonViewStyle"
                    android:text="药品位置"/>
                <ImageView
                    android:id="@+id/iv_drug_position_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_right_arrow"/>
                <TextView
                    android:id="@+id/tv_drug_position"
                    style="@style/ThreeTextStyle"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_drug_position_title"
                    android:layout_toLeftOf="@id/iv_drug_position_right_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>
            <RelativeLayout
                android:id="@+id/rl_drug_elderly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_drug_elderly_title"
                    style="@style/CommonViewStyle"
                    android:text="用药老人"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    android:id="@+id/iv_drug_elderly_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_right_arrow"/>
                <TextView
                    android:id="@+id/tv_drug_elderly"
                    style="@style/ThreeTextStyle"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_drug_elderly_title"
                    android:layout_toLeftOf="@id/iv_drug_elderly_right_arrow"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>
            <RelativeLayout
                android:id="@+id/rl_drug_syr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TextView
                    android:id="@+id/rl_drug_syr_title"
                    style="@style/CommonViewStyle"
                    android:layout_centerVertical="true"
                    android:text="送药人"/>
                <EditText
                    android:id="@+id/et_drug_syr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_toRightOf="@id/rl_drug_syr_title"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>


            <RelativeLayout
                android:id="@+id/rl_drug_jsr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <TextView
                    android:id="@+id/rl_drug_jsr_title"
                    style="@style/CommonViewStyle"
                    android:text="接收人"/>
                <TextView
                    android:id="@+id/tv_drug_jsr"
                    style="@style/ThreeTextStyle"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toRightOf="@id/rl_drug_jsr_title"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                />

            <RelativeLayout
                android:id="@+id/rl_add_spare_drug"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TextView
                    style="@style/CommonViewStyle"
                    android:padding="20dp"
                    android:text="备用药品"/>
                <TextView
                    style="@style/CommonViewStyle"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    android:drawableLeft="@drawable/icon_add_exception"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="药品"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                android:visibility="gone"/>
            <com.healthmanage.ylis.view.ListViewForScrollView
                android:id="@+id/lvfs_spare_drug_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </com.healthmanage.ylis.view.ListViewForScrollView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>