<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fave"
    android:orientation="vertical"
    >

    <include layout="@layout/title" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_unfinish_task"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="交接人未完成任务"
            android:textColor="@color/second_black"
            android:textSize="22sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:padding="10dp" 
                android:visibility="gone"
                >

                <TextView
                    style="@style/CommonViewStyle"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="任务单"
                    />

                <TextView
                    android:id="@+id/tv_edit_tesk_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="填写任务交接单"
                    android:textColor="@color/border_yellow"
                    android:textSize="22sp" 
                    android:background="@drawable/pressed_border_yellow_btn"
                    />
            </RelativeLayout>
            
            <include layout="@layout/main_items_layout"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/gray_bg_2" />
            <RelativeLayout
                android:id="@+id/rl_dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_time"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_unfinish_task"/>
                <TextView
                    android:id="@+id/tv_dose_msg"
                    android:layout_toRightOf="@+id/iv_time"
                    style="@style/CommonViewStyle"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="有x位老人已发药,请准时协助服药!"/>
                <TextView
                    android:id="@+id/tv_help_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="现在协助服药"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:background="@drawable/pressed_all_main_color_btn"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_line"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_room_list" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/v_commit_line" 
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/main_color"/>
                    <TextView
                        android:id="@+id/tv_commit_task" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:gravity="center"
                        android:text="固定任务"
                        android:textColor="@color/main_color"
                        android:textSize="22sp"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_line"/>
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <View 
                        android:id="@+id/v_maybe_line" 
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/main_color"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/tv_maybe_task" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:gravity="center"
                        android:text="备选任务"
                        android:textColor="@color/main_black"
                        android:textSize="22sp"/>
                </LinearLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"/>
            <com.healthmanage.ylis.view.ListViewForScrollView 
                android:id="@+id/lv_task_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
            </com.healthmanage.ylis.view.ListViewForScrollView>
            <com.healthmanage.ylis.view.GridViewForScrollView
		        android:id="@+id/gv_maybe_task_list"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:listSelector="@android:color/transparent"
		        android:horizontalSpacing="10dp"
		        android:numColumns="3"
		        android:padding="20dp"
		        android:verticalSpacing="20dp" 
		        android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>