<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_class_info" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_room"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView
	                android:id="@+id/tv_room" 
	                style="@style/RoomTextStyle"
	                android:padding="10dp"
	                android:text="房间号:"
	                android:layout_centerVertical="true"
	                />
	            <TextView
			        android:id="@+id/tv_group_name" 
			        android:layout_toRightOf="@id/tv_room"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:padding="10dp"
			        android:text="0001"
			        android:textColor="@color/room_black"
			        android:textSize="20sp"
			        android:background="@color/white"/>
	            <ImageView
	                android:id="@+id/iv_butterfly" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_toRightOf="@id/tv_group_name"
	                />
	            <TextView
	                android:id="@+id/tv_measure_count" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_toRightOf="@id/iv_butterfly"
	                android:padding="10dp"
	                android:textSize="20sp"
			        android:background="@color/white"/>
             </RelativeLayout>
             <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@color/gray_line"
		        android:visibility="gone"/>
            </LinearLayout>
       
    </LinearLayout>
    
    <com.healthmanage.ylis.view.GridViewForScrollView
        android:id="@+id/gv_user_list" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:verticalSpacing="1dp"
        >
        
    </com.healthmanage.ylis.view.GridViewForScrollView>

</LinearLayout>
