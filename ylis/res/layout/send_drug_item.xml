<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/border_black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonViewStyle"
                android:text="药品名称:"/>
            <TextView
                android:id="@+id/tv_drug_name"
                android:layout_marginLeft="20dp"
                style="@style/ThreeTextStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonViewStyle"
                android:text="服药时间:"/>
            <TextView
                android:id="@+id/tv_drug_time"
                android:layout_marginLeft="20dp"
                style="@style/ThreeTextStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonViewStyle"
                android:text="用药频次:"/>
            <TextView
                android:id="@+id/tv_drug_pc"
                android:layout_marginLeft="20dp"
                style="@style/ThreeTextStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonViewStyle"
                android:text="药品剩余量:"/>
            <TextView
                android:id="@+id/tv_drug_leave_num"
                android:layout_marginLeft="20dp"
                style="@style/ThreeTextStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                style="@style/CommonViewStyle"
                android:text="本次用量:"/>
            <TextView
                android:id="@+id/tv_use_quantity"
                android:layout_marginLeft="20dp"
                style="@style/ThreeTextStyle"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>