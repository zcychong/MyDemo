<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:id="@+id/ll_histroy_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/icon_unfinish_task" />

        <TextView
            style="@style/CommonViewStyle"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="交接人未完成任务" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_patrol"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:background="@drawable/pressed_white_btn">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_patrol"/>
            
            <TextView 
                style="@style/CommonViewStyle"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="巡视记录"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_sannitation"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:background="@drawable/pressed_white_btn"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_sannitation"/>
            
            <TextView 
                style="@style/CommonViewStyle"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="居室卫生"/>
        </LinearLayout>
        
         <LinearLayout
            android:id="@+id/ll_task_connect"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:background="@drawable/pressed_white_btn">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_task_connect"/>
            
            <TextView 
                style="@style/CommonViewStyle"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="任务交接"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_leave"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:background="@drawable/pressed_white_btn">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_leave"/>
            
            <TextView 
                style="@style/CommonViewStyle"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="请假"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>