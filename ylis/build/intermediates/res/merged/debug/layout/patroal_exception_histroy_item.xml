<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_color"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="@color/patroal_exception_a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_time"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_elderly_name"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_patroal_info"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_patroal_deal"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_elderly_info"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_leader_name"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_room_name"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_room_phone"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_room_back"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_another"
            style="@style/ThreeTextStyle"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>