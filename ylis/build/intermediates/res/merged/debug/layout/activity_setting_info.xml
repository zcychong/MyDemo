<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <TextView
            style="@style/CommonViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/staff_name" />

        <TextView
            android:id="@+id/tv_staff_name"
            style="@style/ThreeTextStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <TextView
            style="@style/CommonViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/staff_numebr" />

        <TextView
            android:id="@+id/tv_staff_numebr"
            style="@style/ThreeTextStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <TextView
            style="@style/CommonViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/change_password" />

        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_update_vertion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <TextView
            style="@style/CommonViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/update_vertion" />

        <ImageView
            android:id="@+id/iv_go" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go"/>
        
        <TextView
            android:id="@+id/tv_version_info" 
            style="@style/ThreeTextStyle"
            android:layout_toLeftOf="@id/iv_go"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_domicile"
            style="@style/CommonViewStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/about_us" />
        
         <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />
    
    <TextView
        android:id="@+id/tv_logout" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="60dp"
        android:gravity="center"
        android:text="退出登录"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/pressed_red_btn"/>

</LinearLayout>